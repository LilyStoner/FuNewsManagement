@page
@model Assignment01_FE.Pages.NewsModel
@{
    ViewData["Title"] = "News";
}
<div class="row">
    <div class="col-md-12">
        <h2>News</h2>
        <div class="d-flex mb-3">
            <form method="get" class="d-flex w-100">
                <input name="Search" value="@Model.Search" class="form-control me-2" placeholder="Search..." />
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-page="/News" asp-route-new="true" class="btn btn-success ms-2">New</a>
            </form>
        </div>

        <table class="table table-bordered" id="newsTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>CreatedDate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var n in Model.News)
                {
                    <tr>
                        <td>@n.NewsArticleId</td>
                        <td>@n.NewsTitle</td>
                        <td>@n.Headline</td>
                        <td>@n.AuthorName</td>
                        <td>@n.CategoryName</td>
                        <td>@(n.CreatedDate?.ToLocalTime().ToString("g"))</td>
                        <td>
                            <a asp-page="/News" asp-route-id="@n.NewsArticleId" class="btn btn-sm btn-info">View/Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a asp-page="/News" asp-route-Page="@(Model.Page-1)" class="btn btn-sm btn-secondary">Previous</a>
            </div>
            <div>
                <a asp-page="/News" asp-route-Page="@(Model.Page+1)" class="btn btn-sm btn-secondary">Next</a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.NextLink))
        {
            <div class="mt-3">More results available: <a href="@Model.NextLink">Next (odata)</a></div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
