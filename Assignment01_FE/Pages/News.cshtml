@page
@model Assignment01_FE.Pages.NewsModel
@{
    ViewData["Title"] = "News";
}
<div class="row">
    <div class="col-md-12">
        <h2>News</h2>
        <div class="d-flex mb-3">
            <form method="get" class="d-flex w-100">
                <input name="Search" value="@Model.Search" class="form-control me-2" placeholder="Search by title, author, category or content..." />
                <select name="Role" class="form-select me-2">
                    <option value="">All creators</option>
                    <option value="1" selected="@(Model.Role=="1")">Staff</option>
                    <option value="2" selected="@(Model.Role=="2")">Lecturer</option>
                </select>
                <input type="date" name="From" value="@(Model.From?.ToString("yyyy-MM-dd"))" class="form-control me-2" />
                <input type="date" name="To" value="@(Model.To?.ToString("yyyy-MM-dd"))" class="form-control me-2" />
                <select name="Status" class="form-select me-2">
                    <option value="">Published only</option>
                    <option value="true" selected="@(Model.Status==true)">Published</option>
                    <option value="false" selected="@(Model.Status==false)">Unpublished</option>
                </select>
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-page="/News" asp-route-new="true" class="btn btn-success ms-2">New</a>
            </form>
        </div>

        <table class="table table-bordered" id="newsTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>CreatedDate</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var n in Model.News)
                {
                    <tr>
                        <td>@n.NewsArticleId</td>
                        <td>@n.NewsTitle</td>
                        <td>@n.Headline</td>
                        <td>@n.AuthorName</td>
                        <td>@n.CategoryName</td>
                        <td>@(n.CreatedDate?.ToLocalTime().ToString("g"))</td>
                        <td>@(n.NewsStatus == true ? "Published" : "Draft")</td>
                        <td>
                            <a asp-page="/News" asp-route-id="@n.NewsArticleId" class="btn btn-sm btn-info">View/Edit</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@n.NewsArticleId" class="d-inline">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.IsEditing)
        {
            <div class="card mt-4">
                <div class="card-body">
                    <form method="post" asp-page-handler="Save">
                        <input type="hidden" asp-for="EditModel.NewsArticleId" />
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input asp-for="EditModel.NewsTitle" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Headline</label>
                            <input asp-for="EditModel.Headline" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Content</label>
                            <textarea asp-for="EditModel.NewsContent" class="form-control"></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="EditModel.NewsStatus" class="form-check-input" />
                            <label class="form-check-label">Published</label>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
