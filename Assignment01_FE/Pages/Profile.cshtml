@page
@model Assignment1_PRN232_FE.Pages.ProfileModel
@{
    ViewData["Title"] = "Staff Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <div class="me-3">
                    <i class="fas fa-user-edit fa-2x text-primary"></i>
                </div>
                <div>
                    <h2 class="mb-1">Staff Profile Management</h2>
                    <p class="text-muted mb-0">Update your personal information and password</p>
                </div>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Staff Access Notice -->
            <div class="alert alert-info mb-4" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Staff Profile Access:</strong> Only Staff members can update their profile and change passwords. 
                Admin and Lecturer accounts are managed through different channels.
            </div>

            @if (Model.CurrentUser != null)
            {
                <!-- Profile Information Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-user me-2"></i>Profile Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="UpdateProfile">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="UpdateProfile.AccountName" class="form-label">
                                        <i class="fas fa-user me-1"></i>Full Name *
                                    </label>
                                    <input asp-for="UpdateProfile.AccountName" class="form-control" />
                                    <span asp-validation-for="UpdateProfile.AccountName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-envelope me-1"></i>Email Address
                                    </label>
                                    <input value="@Model.CurrentUser.AccountEmail" class="form-control" readonly />
                                    <small class="text-muted">
                                        <i class="fas fa-lock me-1"></i>Email cannot be changed
                                    </small>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-id-badge me-1"></i>Account ID
                                    </label>
                                    <input value="@Model.CurrentUser.AccountId" class="form-control" readonly />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-user-tag me-1"></i>Role
                                    </label>
                                    <div class="input-group">
                                        <input value="Staff" class="form-control" readonly />
                                        <span class="input-group-text">
                                            <i class="fas fa-user-tie text-primary"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Note:</strong> You can only update your name. Email address is permanent and cannot be changed for security reasons.
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Update Profile
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Change Password Card -->
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-key me-2"></i>Change Password
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-shield-alt me-2"></i>
                            <strong>Security Notice:</strong> Password changes require verification of your current password. 
                            Choose a strong password with at least 6 characters.
                        </div>
                        
                        <form method="post" asp-page-handler="ChangePassword">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label asp-for="ChangePassword.CurrentPassword" class="form-label">
                                        <i class="fas fa-lock me-1"></i>Current Password *
                                    </label>
                                    <input asp-for="ChangePassword.CurrentPassword" type="password" class="form-control" />
                                    <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ChangePassword.NewPassword" class="form-label">
                                        <i class="fas fa-key me-1"></i>New Password *
                                    </label>
                                    <input asp-for="ChangePassword.NewPassword" type="password" class="form-control" />
                                    <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ChangePassword.ConfirmPassword" class="form-label">
                                        <i class="fas fa-check me-1"></i>Confirm New Password *
                                    </label>
                                    <input asp-for="ChangePassword.ConfirmPassword" type="password" class="form-control" />
                                    <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-key me-2"></i>Change Password
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Error:</strong> Unable to load profile information. Please try again or contact support.
                </div>
            }

            <!-- Navigation -->
            <div class="text-center mt-4">
                <a href="/Staff/Dashboard" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
.card {
    border: none;
    border-radius: 12px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.card-header {
    border-radius: 12px 12px 0 0 !important;
    border: none;
}

.form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
    transform: translateY(-1px);
}

.btn-warning:hover {
    transform: translateY(-1px);
}

.btn-outline-primary {
    color: #667eea;
    border-color: #667eea;
}

.btn-outline-primary:hover {
    background-color: #667eea;
    border-color: #667eea;
}

.alert {
    border: none;
    border-radius: 10px;
}

.input-group-text {
    border: 1px solid #ced4da;
}

.text-primary {
    color: #667eea !important;
}

.bg-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
}
</style>