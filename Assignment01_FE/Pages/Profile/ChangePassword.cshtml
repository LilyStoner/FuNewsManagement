@page
@model Assignment1_PRN232_FE.Pages.Profile.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    var roleDisplay = Model.UserRole == "1" ? "Staff" : "Lecturer";
    var roleIcon = Model.UserRole == "1" ? "fa-user-tie" : "fa-chalkboard-teacher";
    var roleColor = Model.UserRole == "1" ? "primary" : "info";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            
            <!-- Header -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="fas fa-key fa-3x text-@roleColor"></i>
                </div>
                <h2 class="mb-1">Change Password</h2>
                <p class="text-muted mb-0">Update your account password securely</p>
                <div class="mt-2">
                    <span class="badge bg-@roleColor">
                        <i class="fas @roleIcon me-1"></i>@roleDisplay Member
                    </span>
                </div>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Security Notice -->
            <div class="alert alert-warning mb-4" role="alert">
                <div class="d-flex align-items-start">
                    <i class="fas fa-shield-alt me-3 mt-1 fs-5"></i>
                    <div>
                        <h6 class="alert-heading mb-2">Security Requirements</h6>
                        <ul class="mb-0 ps-3">
                            <li>You must provide your current password</li>
                            <li>New password must be at least 6 characters</li>
                            <li>New password must be different from current password</li>
                            <li>You will be logged out after password change</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Change Password Form -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-@roleColor text-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-lock me-2"></i>Password Change Form
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Current Password -->
                        <div class="mb-4">
                            <label asp-for="PasswordChange.CurrentPassword" class="form-label fw-bold">
                                <i class="fas fa-lock me-2"></i>Current Password *
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-key text-muted"></i>
                                </span>
                                <input asp-for="PasswordChange.CurrentPassword" 
                                       type="password" 
                                       class="form-control" 
                                       placeholder="Enter your current password"
                                       autocomplete="current-password" />
                            </div>
                            <span asp-validation-for="PasswordChange.CurrentPassword" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <!-- New Password -->
                        <div class="mb-4">
                            <label asp-for="PasswordChange.NewPassword" class="form-label fw-bold">
                                <i class="fas fa-key me-2"></i>New Password *
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-plus-circle text-success"></i>
                                </span>
                                <input asp-for="PasswordChange.NewPassword" 
                                       type="password" 
                                       class="form-control" 
                                       placeholder="Enter your new password (min 6 characters)"
                                       autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="PasswordChange.NewPassword" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Choose a strong password with at least 6 characters
                            </div>
                        </div>

                        <!-- Confirm New Password -->
                        <div class="mb-4">
                            <label asp-for="PasswordChange.ConfirmPassword" class="form-label fw-bold">
                                <i class="fas fa-check-circle me-2"></i>Confirm New Password *
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-check-double text-success"></i>
                                </span>
                                <input asp-for="PasswordChange.ConfirmPassword" 
                                       type="password" 
                                       class="form-control" 
                                       placeholder="Re-enter your new password"
                                       autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="PasswordChange.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-@roleColor btn-lg">
                                <i class="fas fa-save me-2"></i>Change Password
                            </button>
                            @if (Model.UserRole == "1")
                            {
                                <a href="/Profile" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Profile
                                </a>
                            }
                            else
                            {
                                <a href="/News/Active" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to News
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Text -->
            <div class="text-center mt-4">
                <p class="text-muted small mb-0">
                    <i class="fas fa-question-circle me-1"></i>
                    If you forgot your current password, please contact system administrator
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
