@page
@model Assignment1_PRN232_FE.Pages.Admin.AuditModel
@{
    ViewData["Title"] = "Change Audit Log";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Change Audit</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-history me-2"></i>Change Audit Log
                    </h1>
                    <p class="text-muted">Track article modifications and editors</p>
                </div>
                <div class="d-flex gap-2">
                    <form method="post" asp-page-handler="Export" style="display: inline;">
                        <input type="hidden" name="StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="UpdatedById" value="@Model.UpdatedById" />
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-file-excel me-2"></i>Export Excel
                        </button>
                    </form>
                    <button class="btn btn-outline-secondary" onclick="window.print()">
                        <i class="fas fa-print me-2"></i>Print
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Info/Error Messages -->
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h6 class="m-0">
                        <i class="fas fa-filter me-2"></i>Filter Audit Log
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="StartDate" class="form-control" asp-for="StartDate" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">End Date</label>
                            <input type="date" name="EndDate" class="form-control" asp-for="EndDate" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Editor</label>
                            <select name="UpdatedById" class="form-select" asp-for="UpdatedById">
                                <option value="">All Editors</option>
                                @foreach (var editor in Model.Editors)
                                {
                                    <option value="@editor.AccountId">@editor.AccountName (@editor.RoleName)</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-2"></i>Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Summary -->
    @if (Model.AuditReport.TotalItems > 0)
    {
        <div class="row mb-4">
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card bg-gradient-info text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h6 class="text-uppercase mb-1">Total Modifications</h6>
                                <h3 class="mb-0">@Model.AuditReport.TotalItems</h3>
                            </div>
                            <div>
                                <i class="fas fa-edit fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card bg-gradient-success text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h6 class="text-uppercase mb-1">Current Page</h6>
                                <h3 class="mb-0">@Model.AuditReport.CurrentPage / @Model.AuditReport.TotalPages</h3>
                            </div>
                            <div>
                                <i class="fas fa-file-alt fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card bg-gradient-warning text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h6 class="text-uppercase mb-1">Showing</h6>
                                <h3 class="mb-0">@Model.AuditReport.Items.Count Records</h3>
                            </div>
                            <div>
                                <i class="fas fa-list fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Audit Log Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h6 class="m-0">
                        <i class="fas fa-table me-2"></i>Modification History
                    </h6>
                </div>
                <div class="card-body p-0">
                    @if (Model.AuditReport.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 15%;">Article ID</th>
                                        <th style="width: 25%;">Title</th>
                                        <th style="width: 12%;">Status</th>
                                        <th style="width: 15%;">Created By</th>
                                        <th style="width: 15%;">Last Modified By</th>
                                        <th style="width: 13%;">Modified Date</th>
                                        <th style="width: 5%;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.AuditReport.Items)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">@log.NewsArticleId</span>
                                            </td>
                                            <td>
                                                <strong>@log.NewsTitle</strong>
                                                @if (!string.IsNullOrEmpty(log.CategoryName))
                                                {
                                                    <br />
                                                    <small class="text-muted">
                                                        <i class="fas fa-folder me-1"></i>@log.CategoryName
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @log.StatusBadgeClass">
                                                    @log.StatusText
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-circle text-primary me-2"></i>
                                                    <div>
                                                        <div>@log.CreatedByName</div>
                                                        <small class="text-muted">
                                                            @log.CreatedDate?.ToString("MMM dd, yyyy")
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-edit text-warning me-2"></i>
                                                    <div>
                                                        <div>@log.UpdatedByName</div>
                                                        <small class="text-muted">
                                                            @log.TimeSinceModified
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (log.ModifiedDate.HasValue)
                                                {
                                                    <div>
                                                        <i class="fas fa-clock text-info me-1"></i>
                                                        @log.ModifiedDate.Value.ToString("MMM dd, yyyy")
                                                    </div>
                                                    <small class="text-muted">
                                                        @log.ModifiedDate.Value.ToString("hh:mm tt")
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/News/Details/@log.NewsArticleId" 
                                                   class="btn btn-sm btn-outline-primary" 
                                                   title="View Article">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Modification History Found</h5>
                            <p class="text-muted">
                                @if (Model.StartDate.HasValue || Model.EndDate.HasValue || Model.UpdatedById.HasValue)
                                {
                                    <span>No articles were modified matching your filter criteria.</span>
                                }
                                else
                                {
                                    <span>No articles have been modified yet.</span>
                                }
                            </p>
                            <a href="/Admin/Audit" class="btn btn-primary mt-2">
                                <i class="fas fa-refresh me-2"></i>Clear Filters
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.AuditReport.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Audit log pagination">
                    <ul class="pagination justify-content-center">
                        <!-- Previous Button -->
                        <li class="page-item @(!Model.AuditReport.HasPreviousPage ? "disabled" : "")">
                            @if (Model.AuditReport.HasPreviousPage)
                            {
                                <a class="page-link" href="@Model.GetPageUrl(Model.AuditReport.CurrentPage - 1)">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            }
                            else
                            {
                                <span class="page-link">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </span>
                            }
                        </li>

                        <!-- Page Numbers -->
                        @for (int i = Math.Max(1, Model.AuditReport.CurrentPage - 2); 
                              i <= Math.Min(Model.AuditReport.TotalPages, Model.AuditReport.CurrentPage + 2); 
                              i++)
                        {
                            <li class="page-item @(i == Model.AuditReport.CurrentPage ? "active" : "")">
                                @if (i == Model.AuditReport.CurrentPage)
                                {
                                    <span class="page-link">@i</span>
                                }
                                else
                                {
                                    <a class="page-link" href="@Model.GetPageUrl(i)">@i</a>
                                }
                            </li>
                        }

                        <!-- Next Button -->
                        <li class="page-item @(!Model.AuditReport.HasNextPage ? "disabled" : "")">
                            @if (Model.AuditReport.HasNextPage)
                            {
                                <a class="page-link" href="@Model.GetPageUrl(Model.AuditReport.CurrentPage + 1)">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                            else
                            {
                                <span class="page-link">
                                    Next <i class="fas fa-chevron-right"></i>
                                </span>
                            }
                        </li>
                    </ul>
                </nav>

                <div class="text-center text-muted">
                    <small>
                        Showing @((Model.AuditReport.CurrentPage - 1) * Model.AuditReport.PageSize + 1) 
                        to @Math.Min(Model.AuditReport.CurrentPage * Model.AuditReport.PageSize, Model.AuditReport.TotalItems) 
                        of @Model.AuditReport.TotalItems modifications
                    </small>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set max date to today
            var today = new Date().toISOString().split('T')[0];
            $('input[name="EndDate"]').attr('max', today);

            // Validate date range
            $('input[name="StartDate"], input[name="EndDate"]').on('change', function() {
                var startDate = $('input[name="StartDate"]').val();
                var endDate = $('input[name="EndDate"]').val();
                
                if (startDate && endDate && startDate > endDate) {
                    alert('Start date must be before end date');
                    $(this).val('');
                }
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

<style>
.bg-gradient-info { 
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
}

.bg-gradient-success { 
    background: linear-gradient(135deg, #56CCF2 0%, #2F80ED 100%); 
}

.bg-gradient-warning { 
    background: linear-gradient(135deg, #FFB75E 0%, #ED8F03 100%); 
}

.card {
    border: none;
    border-radius: 15px;
}

.card-header.bg-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    border-radius: 15px 15px 0 0 !important;
}

.breadcrumb {
    background: transparent;
    padding: 0;
}

.breadcrumb a {
    color: #667eea;
    text-decoration: none;
}

.breadcrumb a:hover {
    text-decoration: underline;
}

.table-hover tbody tr:hover {
    background-color: rgba(102, 126, 234, 0.05);
}

.pagination .page-link {
    color: #667eea;
    border-radius: 8px;
    margin: 0 2px;
}

.pagination .page-item.active .page-link {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: #667eea;
}

.opacity-50 {
    opacity: 0.5;
}

@@media print {
    .btn, .breadcrumb, .pagination, .card-header {
        display: none !important;
    }
}
</style>
