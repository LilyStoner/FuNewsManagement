@page
@model Assignment1_PRN232_FE.Pages.Admin.ReportsModel
@{
    ViewData["Title"] = "Reports & Analytics";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Reports</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Reports & Analytics</h1>
                    <p class="text-muted">System statistics and performance metrics</p>
                </div>
                <div class="d-flex gap-2">
                    <form method="post" asp-page-handler="Export" style="display: inline;">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-download me-2"></i>Export Report
                        </button>
                    </form>
                    <button class="btn btn-outline-secondary" onclick="window.print()">
                        <i class="fas fa-print me-2"></i>Print
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Messages -->
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Report Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-filter me-2"></i>Report Filters
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Report Type</label>
                            <select name="ReportType" class="form-select" asp-for="ReportType">
                                <option value="dashboard">Dashboard Overview</option>
                                <option value="category">Articles by Category</option>
                                <option value="author">Articles by Author</option>
                                <option value="monthly">Monthly Statistics</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="StartDate" class="form-control" asp-for="StartDate" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">End Date</label>
                            <input type="date" name="EndDate" class="form-control" asp-for="EndDate" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-chart-bar me-2"></i>Generate Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Content -->
    @if (Model.ReportType == "dashboard")
    {
        <!-- Dashboard Overview -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card bg-gradient-primary text-white shadow">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <h6 class="text-uppercase text-white-50 mb-1">Total Articles</h6>
                                <h3 class="mb-0">@(Model.DashboardStats?.TotalArticles ?? 0)</h3>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-newspaper fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card bg-gradient-success text-white shadow">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <h6 class="text-uppercase text-white-50 mb-1">Published</h6>
                                <h3 class="mb-0">@(Model.DashboardStats?.PublishedArticles ?? 0)</h3>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card bg-gradient-warning text-white shadow">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <h6 class="text-uppercase text-white-50 mb-1">Categories</h6>
                                <h3 class="mb-0">@(Model.DashboardStats?.TotalCategories ?? 0)</h3>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-folder fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card bg-gradient-info text-white shadow">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <h6 class="text-uppercase text-white-50 mb-1">Users</h6>
                                <h3 class="mb-0">@(Model.DashboardStats?.TotalAccounts ?? 0)</h3>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Article Publishing Trends</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-area">
                            <canvas id="articleTrendsChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Article Status Distribution</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <canvas id="statusDistributionChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.ReportType == "category")
    {
        <!-- Category Report -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">Articles by Category</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.CategoryStats.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Category</th>
                                            <th>Total Articles</th>
                                            <th>Published</th>
                                            <th>Draft</th>
                                            <th>Percentage</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var stat in Model.CategoryStats)
                                        {
                                            <tr>
                                                <td>@stat.CategoryName</td>
                                                <td>@stat.TotalArticles</td>
                                                <td><span class="badge bg-success">@stat.PublishedArticles</span></td>
                                                <td><span class="badge bg-warning">@stat.DraftArticles</span></td>
                                                <td>
                                                    <div class="progress">
                                                        <div class="progress-bar" style="width: @(stat.Percentage)%">@(stat.Percentage)%</div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No Data Available</h5>
                                <p class="text-muted">No category statistics found for the selected period.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.ReportType == "author")
    {
        <!-- Author Report -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">Articles by Author</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.AuthorStats.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Author</th>
                                            <th>Role</th>
                                            <th>Total Articles</th>
                                            <th>Published</th>
                                            <th>Draft</th>
                                            <th>Last Article</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var stat in Model.AuthorStats)
                                        {
                                            <tr>
                                                <td>@stat.AuthorName</td>
                                                <td>
                                                    @if (stat.Role == 1)
                                                    {
                                                        <span class="badge bg-primary">Staff</span>
                                                    }
                                                    else if (stat.Role == 2)
                                                    {
                                                        <span class="badge bg-info">Lecturer</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Admin</span>
                                                    }
                                                </td>
                                                <td>@stat.TotalArticles</td>
                                                <td><span class="badge bg-success">@stat.PublishedArticles</span></td>
                                                <td><span class="badge bg-warning">@stat.DraftArticles</span></td>
                                                <td>@stat.LastArticleDate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-user-edit fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No Data Available</h5>
                                <p class="text-muted">No author statistics found for the selected period.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.ReportType == "monthly")
    {
        <!-- Monthly Report -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">Monthly Article Statistics</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-area">
                            <canvas id="monthlyChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Sample data - replace with actual data from model
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        const articleData = [12, 19, 15, 25, 22, 30, 28, 35, 32, 40, 38, 45];
        
        // Article Trends Chart
        if (document.getElementById('articleTrendsChart')) {
            const ctx = document.getElementById('articleTrendsChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: months,
                    datasets: [{
                        label: 'Articles Published',
                        data: articleData,
                        borderColor: 'rgba(102, 126, 234, 1)',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        // Status Distribution Chart
        if (document.getElementById('statusDistributionChart')) {
            const ctx2 = document.getElementById('statusDistributionChart').getContext('2d');
            new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: ['Published', 'Draft'],
                    datasets: [{
                        data: [@(Model.DashboardStats?.PublishedArticles ?? 75), @(Model.DashboardStats?.DraftArticles ?? 25)],
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(255, 159, 64, 0.8)'
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        // Monthly Chart (if monthly report is selected)
        if (document.getElementById('monthlyChart')) {
            const ctx3 = document.getElementById('monthlyChart').getContext('2d');
            new Chart(ctx3, {
                type: 'bar',
                data: {
                    labels: months,
                    datasets: [{
                        label: 'Articles',
                        data: articleData,
                        backgroundColor: 'rgba(102, 126, 234, 0.8)',
                        borderColor: 'rgba(102, 126, 234, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                });
            }
        }

        // Auto-submit form when report type changes
        $('select[name="ReportType"]').on('change', function() {
            $(this).closest('form').submit();
        });

        // Set max date to today
        $(document).ready(function() {
            var today = new Date().toISOString().split('T')[0];
            $('input[name="EndDate"]').attr('max', today);
        });
    </script>
}