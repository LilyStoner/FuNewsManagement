@page
@model Assignment1_PRN232_FE.Pages.News.SearchModel
@{
    ViewData["Title"] = "Search News Articles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Search News Articles</h1>
                    <p class="text-muted">Find articles using advanced search criteria</p>
                    @if (Model.HasSearched && Model.Pagination.TotalItems > 0)
                    {
                        <small class="text-info">
                            Showing @Model.Pagination.StartItem - @Model.Pagination.EndItem of @Model.Pagination.TotalItems articles
                        </small>
                    }
                </div>
                <div>
                    <a href="/News/Active" class="btn btn-outline-primary">
                        <i class="fas fa-newspaper me-2"></i>Browse All News
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card search-card">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-search me-2"></i>Search Criteria
                    </h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SearchTerm" class="form-label">Search Term</label>
                                <input asp-for="SearchTerm" class="form-control" 
                                       placeholder="Search in title and content..." />
                                <div class="form-text">Search in article titles and content</div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="AuthorName" class="form-label">Author Name</label>
                                <input asp-for="AuthorName" class="form-control" 
                                       placeholder="Author's name..." />
                                <div class="form-text">Search articles by author</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">All Categories</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.CategoryId">@category.CategoryName</option>
                                    }
                                </select>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label asp-for="StartDate" class="form-label">From Date</label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label asp-for="EndDate" class="form-label">To Date</label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SortBy" class="form-label">Sort By</label>
                                <select asp-for="SortBy" class="form-select">
                                    <option value="date">Date</option>
                                    <option value="title">Title</option>
                                    <option value="author">Author</option>
                                    <option value="category">Category</option>
                                </select>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="SortOrder" class="form-label">Sort Order</label>
                                <select asp-for="SortOrder" class="form-select">
                                    <option value="desc">Newest First</option>
                                    <option value="asc">Oldest First</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group" role="group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Search
                                </button>
                                <a href="/News/Search" class="btn btn-outline-secondary">
                                    <i class="fas fa-eraser me-2"></i>Clear
                                </a>
                            </div>
                            
                            @if (Model.HasSearched)
                            {
                                <div class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Found @Model.TotalResults article(s)
                                </div>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results -->
    @if (Model.HasSearched)
    {
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Search Results</h4>
                    @if (Model.TotalResults > 0)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle btn-sm" type="button" 
                                    data-bs-toggle="dropdown">
                                <i class="fas fa-sort me-1"></i>Sort: @(Model.SortBy.Substring(0,1).ToUpper() + Model.SortBy.Substring(1))
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="?@(GetSortUrl("date"))">Date</a></li>
                                <li><a class="dropdown-item" href="?@(GetSortUrl("title"))">Title</a></li>
                                <li><a class="dropdown-item" href="?@(GetSortUrl("author"))">Author</a></li>
                                <li><a class="dropdown-item" href="?@(GetSortUrl("category"))">Category</a></li>
                            </ul>
                        </div>
                    }
                </div>

                @if (Model.SearchResults.Any())
                {
                    <!-- Results List -->
                    <div class="row">
                        @foreach (var article in Model.SearchResults)
                        {
                            <div class="col-lg-6 mb-4">
                                <div class="card search-result-card h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <span class="badge bg-primary">@article.CategoryName</span>
                                            <small class="text-muted">@article.CreatedDate?.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        
                                        <h5 class="card-title">
                                            <a href="/News/Details/@article.NewsArticleId" class="text-decoration-none">
                                                @article.NewsTitle
                                            </a>
                                        </h5>
                                        
                                        <p class="card-text text-muted mb-2">@article.Headline</p>
                                        
                                        @if (!string.IsNullOrEmpty(article.NewsContent) && article.NewsContent.Length > 150)
                                        {
                                            <p class="card-text">
                                                @(Html.Raw(article.NewsContent.Substring(0, 150)))...
                                            </p>
                                        }
                                        else if (!string.IsNullOrEmpty(article.NewsContent))
                                        {
                                            <p class="card-text">@Html.Raw(article.NewsContent)</p>
                                        }
                                        
                                        <div class="d-flex justify-content-between align-items-center mt-3">
                                            <small class="text-muted">
                                                <i class="fas fa-user me-1"></i>@article.CreatedByName
                                            </small>
                                            <div>
                                                @if (article.NewsStatus != true)
                                                {
                                                    <span class="badge bg-warning text-dark me-2">Draft</span>
                                                }
                                                <a href="/News/Details/@article.NewsArticleId" class="btn btn-outline-primary btn-sm">
                                                    Read More <i class="fas fa-arrow-right ms-1"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <!-- Pagination -->
                    @if (Model.Pagination.TotalPages > 1)
                    {
                        <div class="row">
                            <div class="col-12">
                                <nav aria-label="Search results pagination" class="d-flex justify-content-center">
                                    <ul class="pagination">
                                        <!-- Previous Button -->
                                        <li class="page-item @(!Model.Pagination.HasPreviousPage ? "disabled" : "")">
                                            @if (Model.Pagination.HasPreviousPage)
                                            {
                                                <a class="page-link" href="@Model.GetSearchPageUrl(Model.Pagination.CurrentPage - 1)" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                    <span class="sr-only">Previous</span>
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="page-link" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                    <span class="sr-only">Previous</span>
                                                </span>
                                            }
                                        </li>

                                        <!-- First Page -->
                                        @if (Model.Pagination.GetPageNumbers().First() > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.GetSearchPageUrl(1)">1</a>
                                            </li>
                                            @if (Model.Pagination.GetPageNumbers().First() > 2)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                        }

                                        <!-- Page Numbers -->
                                        @foreach (var pageNum in Model.Pagination.GetPageNumbers())
                                        {
                                            <li class="page-item @(pageNum == Model.Pagination.CurrentPage ? "active" : "")">
                                                @if (pageNum == Model.Pagination.CurrentPage)
                                                {
                                                    <span class="page-link">
                                                        @pageNum
                                                        <span class="sr-only">(current)</span>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <a class="page-link" href="@Model.GetSearchPageUrl(pageNum)">@pageNum</a>
                                                }
                                            </li>
                                        }

                                        <!-- Last Page -->
                                        @if (Model.Pagination.GetPageNumbers().Last() < Model.Pagination.TotalPages)
                                        {
                                            @if (Model.Pagination.GetPageNumbers().Last() < Model.Pagination.TotalPages - 1)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.GetSearchPageUrl(Model.Pagination.TotalPages)">@Model.Pagination.TotalPages</a>
                                            </li>
                                        }

                                        <!-- Next Button -->
                                        <li class="page-item @(!Model.Pagination.HasNextPage ? "disabled" : "")">
                                            @if (Model.Pagination.HasNextPage)
                                            {
                                                <a class="page-link" href="@Model.GetSearchPageUrl(Model.Pagination.CurrentPage + 1)" aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                    <span class="sr-only">Next</span>
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="page-link" aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                    <span class="sr-only">Next</span>
                                                </span>
                                            }
                                        </li>
                                    </ul>
                                </nav>

                                <!-- Pagination Info -->
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <div class="text-muted">
                                        <small>
                                            Page @Model.Pagination.CurrentPage of @Model.Pagination.TotalPages
                                            (@Model.Pagination.TotalItems total results)
                                        </small>
                                    </div>
                                    <div class="btn-group" role="group" aria-label="Page size options">
                                        <a href="@Model.GetSearchPageSizeUrl(3)" class="btn btn-outline-secondary btn-sm @(Model.PageSize == 3 ? "active" : "")">
                                            3 per page
                                        </a>
                                        <a href="@Model.GetSearchPageSizeUrl(6)" class="btn btn-outline-secondary btn-sm @(Model.PageSize == 6 ? "active" : "")">
                                            6 per page
                                        </a>
                                        <a href="@Model.GetSearchPageSizeUrl(9)" class="btn btn-outline-secondary btn-sm @(Model.PageSize == 9 ? "active" : "")">
                                            9 per page
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- No Results -->
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Articles Found</h5>
                            <p class="text-muted">
                                No articles match your search criteria. Try adjusting your search terms or filters.
                            </p>
                            <div class="mt-3">
                                <a href="/News/Search" class="btn btn-primary me-2">
                                    <i class="fas fa-search me-2"></i>New Search
                                </a>
                                <a href="/News/Active" class="btn btn-outline-secondary">
                                    <i class="fas fa-newspaper me-2"></i>Browse All News
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Initial State -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-search fa-3x text-primary mb-3"></i>
                        <h5>Advanced News Search</h5>
                        <p class="text-muted mb-4">
                            Use the search form above to find specific articles using various criteria such as keywords, author, category, and date range.
                        </p>
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <div class="d-flex justify-content-center gap-4 text-muted">
                                    <div class="text-center">
                                        <i class="fas fa-search-plus fa-2x mb-2 d-block"></i>
                                        <small>Advanced Filters</small>
                                    </div>
                                    <div class="text-center">
                                        <i class="fas fa-sort-amount-down fa-2x mb-2 d-block"></i>
                                        <small>Smart Sorting</small>
                                    </div>
                                    <div class="text-center">
                                        <i class="fas fa-clock fa-2x mb-2 d-block"></i>
                                        <small>Date Range</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@functions {
    private string GetSortUrl(string sortBy)
    {
        var parameters = new List<string>();
        
        if (!string.IsNullOrEmpty(Model.SearchTerm))
            parameters.Add($"SearchTerm={Uri.EscapeDataString(Model.SearchTerm)}");
        if (!string.IsNullOrEmpty(Model.AuthorName))
            parameters.Add($"AuthorName={Uri.EscapeDataString(Model.AuthorName)}");
        if (Model.CategoryId.HasValue)
            parameters.Add($"CategoryId={Model.CategoryId}");
        if (Model.StartDate.HasValue)
            parameters.Add($"StartDate={Model.StartDate:yyyy-MM-dd}");
        if (Model.EndDate.HasValue)
            parameters.Add($"EndDate={Model.EndDate:yyyy-MM-dd}");
            
        parameters.Add($"SortBy={sortBy}");
        parameters.Add($"SortOrder={Model.SortOrder}");
        parameters.Add($"CurrentPage=1"); // Reset to first page when changing sort
        
        return string.Join("&", parameters);
    }
}

@section Scripts {
    <script>
        // Smooth scroll to top when pagination is clicked
        document.addEventListener('DOMContentLoaded', function() {
            const paginationLinks = document.querySelectorAll('.pagination a.page-link');
            paginationLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // Add a small delay to allow the page to start loading
                    setTimeout(() => {
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                    }, 100);
                });
            });
            
            // Set max date to today
            var today = new Date().toISOString().split('T')[0];
            const endDateInput = document.getElementById('EndDate');
            if (endDateInput) {
                endDateInput.setAttribute('max', today);
            }
            
            // Validate date range
            const startDateInput = document.getElementById('StartDate');
            const validateDates = function() {
                const startDate = startDateInput?.value;
                const endDate = endDateInput?.value;
                
                if (startDate && endDate && startDate > endDate) {
                    alert('Start date must be before end date');
                    event.target.value = '';
                }
            };
            
            if (startDateInput) startDateInput.addEventListener('change', validateDates);
            if (endDateInput) endDateInput.addEventListener('change', validateDates);
        });
    </script>
}

<style>
