@page
@model Assignment1_PRN232_FE.Pages.Staff.DashboardModel
@{
    ViewData["Title"] = "Staff Portal";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <h5>Redirecting to your workspace...</h5>
                    <p class="text-muted">
                        You're being redirected to the appropriate section based on your role.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// This script runs if redirect doesn't work for some reason
setTimeout(function() {
    window.location.href = '/Staff/Articles';
}, 2000);
</script>

<style>
.card {
    border: none;
    border-radius: 15px;
    margin-top: 10vh;
}

.spinner-border {
    width: 3rem;
    height: 3rem;
}
</style>